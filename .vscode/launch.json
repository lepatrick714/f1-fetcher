{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Run f1-fetcher.ts (tsx)",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "tsx"
      ],
      "args": [
        "${workspaceFolder}/f1-fetcher.ts",
        "--",          // forward marker; optional but keeps args consistent
        "cached"       // example CLI command to trigger listCachedFiles
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Run compiled JS (node)",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/f1-fetcher.js",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "args": ["cached"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "Run f1-fetcher.ts via WSL (prompt args)",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "wsl",
      "runtimeArgs": [
        "bash",
        "-lc",
        "npx tsx /home/lepatrick714/F1_Prototypes/f1-fetcher.ts ${input:cliArgs}"
      ],
      "cwd": "/home/lepatrick714/F1_Prototypes",
      "console": "integratedTerminal",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ],
  "inputs": [
    {
      "id": "cliArgs",
      "type": "promptString",
      "description": "Arguments to pass to f1-fetcher.ts (e.g. 'cached' or 'fetch 9161 --no-cache')",
      "default": "cached"
    }
  ]
}